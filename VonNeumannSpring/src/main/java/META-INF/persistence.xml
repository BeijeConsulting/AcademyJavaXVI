<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="VonNeumann">
		<class>it.beije.neumann.model.Contatto</class>
		<class>it.beije.neumann.model.Order</class>
		<class>it.beije.neumann.model.OrderItem</class>
		
		<class>it.beije.neumann.db3.model.Product</class>
		<class>it.beije.neumann.db3.model.ProductDetails</class>
		<class>it.beije.neumann.db3.model.ConversionSize</class>
		
		<class>it.beije.neumann.db3.model.ShoppingCart</class>
		<class>it.beije.neumann.db3.model.ShoppingCartItem</class>
		
		<!-- Marianna -->
		<class>it.beije.neumann.db3.model.User</class>
		<class>it.beije.neumann.db3.model.Address</class>
		<!-- /Marianna -->
		
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ecommerce_shoes"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="yourpassword"/>
		</properties>
	</persistence-unit>
</persistence>
