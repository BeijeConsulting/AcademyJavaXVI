<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "it.beije.neumann.web.verzaschi.Contact" table = "contatti">
      
      <meta attribute = "class-description">
         This class contains the contatti detail.
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "surname" column = "cognome" type = "string"/>
      <property name = "name" column = "nome" type = "string"/>
      <property name = "telephone" column = "telefono" type = "string"/>
      <property name = "email" column = "email" type = "string"/>
      <property name = "note" column = "note" type = "text"/>
      
   </class>
</hibernate-mapping>