<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <title>Index</title>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Home</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="./shoppingcart">Cart</a>
        </li>
        <li class="nav-item">
          <% if (!isNaN(user.id)) { %>
            <a class="nav-link" href="./logout">Logout</a>
            <li class="nav-item">
              <a class="nav-link" href="./orders">Your Orders</a>
            </li>
            <li class="nav-item">Bentornato, <%=user.name %></li>
          <% } else { %>
            <a class="nav-link" href="./login">Login</a>
          <% } %>
        </li>
      </ul>
    </div>
  </div>
</nav>

    <div class="container pt-5">
        <div class="col pt-5">
            I tuoi indirizzi
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Nazione</th>
                    <th scope="col">inirizzo</th>
                    <th scope="col">Nome</th>
                    <th scope="col">telefono</th>
                  </tr>
                </thead>
                <tbody>
                    <% addresses.forEach((a) => { %>
                  <tr>
                    <th><%= a.country %></th>
                    <td><%= a.street_address %></td>
                    <td><%= a.name_surname %></td>
                    <td><%= a.telephone %></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
        </div>
    </div>





</body>
</html>