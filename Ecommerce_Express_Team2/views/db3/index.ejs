
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Product List</title>
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet"
	href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<style>
		.w3-container img {
		   width: 100%;
		   height: 100%;
		   object-fit: contain;
		}
	  </style>
</head>
<body>

	<!-- Header da mettere ovunque -->
	<div class="w3-bar w3-deep-orange w3-padding w3-card">
		<a class="w3-bar-item w3-button w3-hover-white"
			href="/product/all">Beije - Shoes First</a>
		<div class="w3-right">
				<%if (!user.id) {%>
					<a class="w3-bar-item w3-button w3-hover-white"
						href="/signin">Sign-In</a>
					<a class="w3-bar-item w3-button w3-hover-white"
						href="/signup">Sign-Up</a>
						<%} else {%>
					<a href="/shopping_cart"
						class="w3-button w3-deep-orange w3-hover-black"> <i
						class="fa fa-shopping-cart"></i> Shopping Cart
					</a>
					<a class="w3-bar-item w3-button w3-hover-white"
						href="/user">User page</a>
					<a class="w3-bar-item w3-button w3-hover-white"
						href="/signout">Sign-Out</a>
						<%}%>
		</div>
	</div>
	<!-- Header da mettere ovunque -->

	<div class="w3-container">
		<h1 class="w3-margin-top">Product List</h1>
		<div class="w3-row-padding">
			<% products.forEach(product => {%>
				<div class="w3-third w3-margin-bottom">
					<div class="w3-card">
						
						  
						  <div class="w3-container">
							<img src="https://cdnimg.vivaia.com/vivaia/products/1684208735-99580c6a-96c1-4a61-9b82-d9217bb2404f.jpg?imresize=600x600" alt="">
							<h5><%= product.name %></h5>
							<p><%= product.description %></p>
							  <a href="/product/<%= product.id %>"
								class="w3-button w3-block w3-deep-orange">View Details</a><br>
						  </div>
					</div>
				</div>
				
			<%})%>

		</div>
	</div>

	<!-- JavaScript -->
	<script src="https://www.w3schools.com/lib/w3.js"></script>

</body>
</html>